{
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "rules": {
    "strict": [2, "safe"],
    "no-debugger": 2,
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "keyword-spacing": 2,
    "space-before-function-paren": [2, "never"],
    "vars-on-top": 2,
    "no-undef": 2,
    "no-undefined": 2,
    "comma-dangle": [2, "always-multiline"],
    "spaced-comment": [2, "always"],
    "no-trailing-spaces": 2,
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "max-len": [1, 120, 4],
    "react/prefer-es6-class": 1
  }
}
