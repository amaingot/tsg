{
  "name": "tsg-front",
  "version": "1.0.0",
  "description": "Tennis Shop Guru front end TypeScript React App",
  "main": "index.tsx",
  "scripts": {
    "build": "./node_modules/.bin/webpack --config webpack.prod.js",
    "dev": "./node_modules/.bin/webpack-dev-server --config webpack.dev.js --watch",
    "lint": "./node_modules/.bin/tslint {src,test}{,/**,/**/**}/*.{ts,tsx} --config tslint.json",
    "lint:fix": "npm run lint -- --fix",
    "lint:ci": "npm run lint -- --format junit --out reports/tslint.xml",
    "analyze": "./node_modules/.bin/webpack-dev-server --config webpack.analyze.js",
    "fresh": "rm -rf node_modules dist reports",
    "test:ci": "npm run test -- --ci --reporters=default --reporters=jest-junit",
    "test:coverage:ci": "npm run test -- --coverage --no-cache --maxWorkers=6 --ci",
    "test:coverage": "npm run test -- --coverage --no-cache --maxWorkers=6",
    "test:watch": "npm run test -- --watch",
    "test": "./node_modules/.bin/jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amaingot/tsg-front.git"
  },
  "author": "Alex Maingot",
  "private": true,
  "homepage": "https://github.com/amaingot/tsg-front#readme",
  "dependencies": {
    "antd": "^3.6.5",
    "axios": "^0.18.0",
    "connected-react-router": "^4.3.0",
    "history": "^4.7.2",
    "immutable": "^3.8.2",
    "jwt-decode": "^2.2.0",
    "moment": "^2.22.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-saga": "^0.16.0",
    "styled-components": "^3.3.3",
    "typesafe-actions": "^2.0.4"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/history": "^4.6.2",
    "@types/jest": "^23.3.1",
    "@types/jwt-decode": "^2.2.1",
    "@types/node": "^10.3.3",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.2",
    "@types/react-router-dom": "^4.2.7",
    "@types/sinon": "^5.0.1",
    "awesome-typescript-loader": "^5.2.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "jest": "^23.4.2",
    "jest-junit": "^5.1.0",
    "less": "^3.5.3",
    "less-loader": "^4.1.0",
    "prettier": "^1.14.0",
    "sinon": "^6.1.4",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "typescript-styled-plugin": "^0.10.0",
    "webpack": "^4.15.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "setupFiles": [
      "raf/polyfill"
    ],
    "testRegex": "/.*.test.(ts|tsx|js)$",
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.ts",
    "testURL": "http://localhost/",
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    }
  }
}
