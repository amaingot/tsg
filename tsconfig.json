{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "exclude": ["**/node_modules/**", "**/build/**"]
}
