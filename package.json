{
  "name": "tsg",
  "version": "1.0.0",
  "description": "Tennis Shop Guru",
  "author": "Alex Maingot (alex@maingot.us)",
  "homepage": "https://github.com/amaingot/tsg",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --parallel",
    "test:web": "lerna run --scope web test",
    "build:web": "lerna run --scope web build",
    "deploy:api": "lerna run --scope api deploy:prod",
    "deploy:web": "s3-deploy './web/build/**' --cwd './web/build/' --region $AWS_REGION --bucket $S3_BUCKET_NAME --deleteRemoved --distId $CLOUDFRONT_DIST_ID --invalidate '/*'",
    "fresh": "rm -rf node_modules && lerna run fresh"
  },
  "devDependencies": {
    "lerna": "^3.16.4",
    "s3-deploy": "^1.4.0",
    "serverless": "^1.53.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amaingot/tsg.git"
  },
  "keywords": [
    "react",
    "amplify",
    "typescript",
    "aws"
  ]
}
