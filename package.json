{
  "name": "tsg",
  "version": "1.0.0",
  "description": "Tennis Shop Guru",
  "author": "Alex Maingot (alex@maingot.us)",
  "homepage": "https://github.com/amaingot/tsg",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "fresh": "rm -rf node_modules && lerna run fresh",
    "start": "REACT_APP_API_HOST=http://localhost:3001 lerna run start --parallel",
    "deploy-api": "lerna run --scope tsg-api deploy:prod --stream",
    "test-web": "lerna run --scope tsg-web test --stream",
    "build-web": "lerna run --scope tsg-web build --stream",
    "deploy-web": "s3-deploy './web/build/**' --cwd './web/build/' --region $AWS_REGION --bucket $S3_BUCKET_NAME --deleteRemoved --distId $CLOUDFRONT_DIST_ID --invalidate '/*'"
  },
  "devDependencies": {
    "lerna": "^3.16.4",
    "s3-deploy": "^1.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amaingot/tsg.git"
  },
  "keywords": [
    "react",
    "typescript",
    "aws"
  ]
}
